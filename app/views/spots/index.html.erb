<div class= "d-flex">
  <div class="bg-white" style="height: 100vh; overflow:scroll; display:absolute; width: 50%;">
    <h3>More than <%= @spots.size %> Spots</h3>
      <% @spots.each do |spot| %>
      <div class="card-show border-top pt-3 bg-white">
        <div class="img-card">
          <img class ="rounded" style= "width: 300px; height:200px", src=<%= spot.photo_url %> >
        </div>
        <div class="card-body">
          <div class="card-tag d-flex justify-content-between">
            <p class="desc-card mb-1">Private Spot</p>
            <div>
              <p class="desc-card" style="color:#222222"><i class="fas fa-star" style="color:#ff385c"></i> <%= rand(2.0..5.0).round(1) %> <span style="color:#717171">(<%= rand(100..600) %>)</span></p>
            </div>
          </div>
          <h4 class="title-card"> <%= link_to spot.marina_name, spot_path(spot) %></h4>
          <p class="desc-card"><%= spot.description %></p>
        </div>
    </div>
    <% end %>
  </div>

  <div class="bg-white p-0" style="height: 100vh; display:absolute; width: 50%;">
    <div
      id="map"
      style="width: 100%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
  </div>
</div>


