<div class="container">
  <h1 class="pt-4">My Bookings (<%= @bookings.length %>)</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Spot</th>
        <th scope="col">Duration</th>
        <th scope="col">From</th>
        <th scope="col">To</th>
        <th scope="col">Total Price</th>
        <th scope="col"> Payment Status</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= Spot.find(booking.spot_id).marina_name %></td>
        <td><%= (booking.end_date - booking.start_date).to_i %> days</td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td> <strong> <%= (booking.end_date - booking.start_date).to_i * Spot.find(booking.spot_id).price_per_night %> â‚¬ </strong></td>
        <td> <p class="btn btn-success"> Paid </p></td>
        <td><%= link_to "Edit", edit_booking_path(booking) %></td>
        <td><%= link_to "Delete", booking_path(booking), method: :delete%></td>
      </tr>
    <% end  %>
    </tbody>
  </table>
</div>
