<div class="container">
  <h1 class="pt-4">My Bookings</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Spot</th>
        <th scope="col">From</th>
        <th scope="col">To</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= Spot.find(booking.spot_id).marina_name %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= link_to "Edit", edit_spot_booking_path(booking.spot, booking) %></td>
        <td><%= link_to "Delete", spot_booking_path(booking.spot, booking), method: :delete%></td>
      </tr>
    <% end  %>
    </tbody>
  </table>
</div>
